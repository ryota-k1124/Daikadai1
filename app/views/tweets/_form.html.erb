<p id="notice"><%= notice %></p>
<%= form_for(@tweet, url: choose_new_or_edit) do |f| %>
  <% if @tweet.errors.any? %>
     <div id="error_explanation">
     <ul>
         <% @tweet.errors.full_messages.each do |msg| %>
            <li><%= msg %></li>
         <% end %>
     </ul>
     </div>
  <% end %>
  

  <%= f.label :content %>
  <%= f.text_field :content, class: 'form-control' %>
  <br>
  <%= f.submit 'つぶやく' %>
<% end %>